{{ 'custom-image-with-text.css' | asset_url | stylesheet_tag }}
<div class="custom-image-with-text">
  <div class="image_left-wrapper">
    {%- if section.settings.left_image != blank -%}
      <div class="left_image">
        <img src="{{ section.settings.left_image | img_url:'master' }}">
      </div>
    {%- endif -%}
    <p class="left_text">{{ section.settings.left_text }}</p>
  </div>
  <div class="image_right-wrapper">
    <h2 class="right_heading">{{ section.settings.right_heading }}</h2>
    {%- if section.settings.right_image != blank -%}
      <div class="right_image">
        <img src="{{ section.settings.right_image | img_url:'master' }}">
      </div>
    {%- endif -%}
    <p class="right_text">{{ section.settings.right_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Custom Image With Text",
  "class": "custom image with text",
  "settings": [
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "left_text",
      "label": "Left Text"
    },
    {
      "type": "text",
      "id": "right_heading",
      "label": "Right Heading"
    },
    {
      "type": "text",
      "id": "right_text",
      "label": "Right Text"
    }
  ],

  "presets": [
    {
      "name": "custom image with text"
    }
  ]
}
{% endschema %}
