<div class="featured1 cs-{{ section.id }}">
  {% if section.settings.heading != blank %}
   <h6 style="width:100%;">{{ section.settings.heading }}</h6>
  {% endif %}
  {% if section.settings.sub-heading != blank %}
   <p style="width:100%;">{{ section.settings.sub-heading }}</p>
  {% endif %}
  <br><br>
  <div class="featured1-left">
   <a href="{{ section.settings.link }}">
      <img src="{{ section.settings.image | img_url:'master' }}">
    </a>
  </div>
  <div class="featured1-right">
    <a href="{{ section.settings.link1 }}">
      <img src="{{ section.settings.image1 | img_url:'master' }}">
    </a>
  </div>
  
</div>
<style>
  
  .featured1
  {
    display:flex;
    justify-content:center;
    align-items:center;
    flex-wrap:wrap;
    padding:50px 5%;
    text-align:center;
  }
  .featured1-left
  {
    width:50%;
    max-width:50%;
    text-align:center;
    padding:20px;
  }
  
  .featured1-right
  {
    width:50%;
    max-width:50%;
    text-algin:center;
    padding:20px;
  }
  .featured1 img
  {
    max-width:100%;
  }
  @media screen and (max-width:768px)
  {
   
    .featured1-left,.featured1-right
    {
      width:100%;
      max-width:100%;
    }
  }
</style>
{% schema %}
{
  "name": "Featured1",
  "settings": [
    {
          "type": "text",
          "id": "heading",
          "label": "Heading"
    },
    {
          "type": "text",
          "id": "sub-heading",
          "label": "Heading"
    },
    {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
    },
    {
          "type": "url",
          "id": "link",
          "label": "Link"
    },
    {
          "type": "image_picker",
          "id": "image1",
          "label": "Image"
    },
    {
          "type": "url",
          "id": "link1",
          "label": "Link"
    }
    
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Featured 1"
    }
  ]
}
{% endschema %}