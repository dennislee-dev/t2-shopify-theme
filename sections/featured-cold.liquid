{{ 'featured-cold.css' | asset_url | stylesheet_tag }}
<div class="featured-cold cs-{{ section.id }}">
  <div class="featured-header">
    <div class="featured-heading">
      {{ section.settings.heading }}
    </div>
    <div class="featured-description">
      {{ section.settings.description }}
    </div>
    <div class="featured-sub_description">
      {{ section.settings.sub_description }}
    </div>
  </div>
  <div class="featured-wrapper">
    <div class="featured-cold1">
      {{ section.settings.text }}
    </div>
    <div class="featured-cold2">
      <a href="{{ section.settings.link }}">
        <img src="{{ section.settings.image | img_url:'master' }}">
        <div class="bottom-div">
          <h4>{{ section.settings.title }}</h4>
          <p>{{ section.settings['sub-heading'] }}</p>
        </div>
      </a>
      {%- if section.settings.path_image -%}
        <div class="path_image">
          <img src="{{ section.settings.path_image | img_url:'master' }}" alt="{{ section.settings.path_image.alt}}">
        </div>
      {%- endif -%}
      <div class="white-cont">
        <div class="box-content">
          {%- if section.settings.html -%}
            {{ section.settings.html }}
          {%- endif -%}
          {%- if section.settings.right_image -%}
            <div class="right_image">
              <img
                src="{{ section.settings.right_image | img_url:'master' }}"
                alt="{{ section.settings.right_image.alt}}"
              >
            </div>
          {%- endif -%}
        </div>
      </div>
    </div>
    <div class="featured-cold3"></div>
  </div>
</div>

{% schema %}
{
  "name": "featured-cold",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "richtext",
      "id": "sub_description",
      "label": "Sub Description"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "path_image",
      "label": "Path Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading"
    },
    {
      "type": "text",
      "id": "sub-heading",
      "label": "Sub-Heading"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "liquid",
      "id": "html",
      "label": "Custom HTML",
      "default": "<div style='text-align: center; padding: 90px 0;'><h2 class='home__subtitle'>Custom HTML</h2><p>Add your custom HTML here.</p></div>"
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "featured-cold"
    }
  ]
}
{% endschema %}
