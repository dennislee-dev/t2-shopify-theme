<!-- /sections/section-html.liquid -->
<div class="section-html-{{ section.id }}">
  <div class="main-contt">
     <div class="grid-container">
    {% for block in section.blocks %}
      <div class="item-{{ forloop.index }}" >
        <a href="{{ block.settings.link }}">
           {% if block.settings.image != blank %}
             <img src="{{ block.settings.image | img_url:'master' }}">
           {% endif %}
        </a>
      </div>
    {% endfor %}
  </div>
     <div class="bottom-div">
        <h4>{{ section.settings.title }}</h4>
        <p>{{ section.settings.sub-heading }}</p>
      </div>
    {% if section.settings.image1 != blank %}
     <img class="abs-last" src="{{ section.settings.image1 | img_url:'master' }}">
      {% endif %}
   </div>
 
</div>
<style>
  .section-html-{{section.id}}
  {
    padding:50px 5%;
    background-color:#F1F1F1;
    position:relative;
  }
  .main-contt
  {
    width: 60%;
    margin:0 auto;
  }
  .grid-container
  {
    width: 100%;
    text-align: center;
    display: grid;
    grid-template-rows: repeat(4, 15vw);
    grid-template-columns: 1fr 1fr 1fr;
    grid-column-gap: 10px;
    grid-row-gap: 10px;
    margin: 0 auto;
  }
  .grid-container img
  {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-width:100%;
  }
  .item-1
  {
    grid-row-start: 1;
    grid-row-end: 3;
  }
  .item-2
  {
    
  }
  .item-3
  {
    
  }
  .item-4
  {
    grid-row-start: 2;
    grid-row-end: 3;
    grid-column-start: 2;
    grid-column-end: 3;
  }
  .item-5
  {
    grid-row-start: 2;
    grid-row-end: 4;
  }
  .item-6
  {
    
  }
  .item-7
  {
    
  }
  .item-8
  {
    
  }
  .item-9
  {
    
  }
  .item-10
  {
    
  }
  .bottom-div
  {
    border-top:2px solid #FF5D00;
    border-bottom:2px solid #FF5D00;
    margin:20px 0px;
  }
  .abs-last
  {
    position: absolute;
    top: -10%;
    max-width: 480px;
    right: 30px;
  }
  @media screen and (max-width:900px)
  {
    .grid-container
    {
      width:100%;
      display:flex;
      flex-wrap:wrap;
    }
    .main-contt 
    {
     width: 100%;
    }
    .abs-last
    {
      display:none;
    }
  
  }
  
</style>
{% schema %}
{
  "name": "Custom Grid LAst",
  "max_blocks":10,
  "settings": [
    {
          "type": "image_picker",
          "id": "image1",
          "label": "image"
    },
    {
          "type": "text",
          "id": "title",
          "label": "Heading"
    },
    {
          "type": "text",
          "id": "sub-heading",
          "label": "Sub heading"
    }
    
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Custom About Last"
    }
  ]
}
{% endschema %}
