<!-- /sections/section-html.liquid -->
<div class="section-html-{{ section.id }} wrapper">
  {% if section.settings['sub-heading'] %}
    <h5>{{ section.settings['sub-heading'] }}</h5>
  {% endif %}
  <div class="leftt">
    {% if section.settings.title1 != blank %}
      <h2>{{ section.settings.title1 }}</h2>
    {% endif %}

    {% if section.settings.title2 != blank %}
      <h2>{{ section.settings.title2 }}</h2>
    {% endif %}

    {% if section.settings.title3 != blank %}
      <h2>{{ section.settings.title3 }}</h2>
    {% endif %}
  </div>
  <div class="rightt">
    {% if section.settings['sub-title1'] != blank %}
      <a href="{{ section.settings.sub-link1 }}">{{ section.settings['sub-title1'] }}</a>
    {% endif %}
    {% if section.settings['sub-title2'] != blank %}
      <a href="{{ section.settings.sub-link2 }}">{{ section.settings['sub-title2'] }}</a>
    {% endif %}
    {% if section.settings['sub-title3'] != blank %}
      <a href="{{ section.settings.sub-link3 }}">{{ section.settings['sub-title3'] }}</a>
    {% endif %}
    {% if section.settings['sub-title4'] != blank %}
      <a href="{{ section.settings.sub-link4 }}">{{ section.settings['sub-title4'] }}</a>
    {% endif %}
    {% if section.settings['sub-title5'] != blank %}
      <a href="{{ section.settings.sub-link5 }}">{{ section.settings['sub-title5'] }}</a>
    {% endif %}
    {% if section.settings['sub-title6'] != blank %}
      <a href="{{ section.settings.sub-link6 }}">{{ section.settings['sub-title6'] }}</a>
    {% endif %}
    {% if section.settings['sub-title7'] != blank %}
      <a href="{{ section.settings.sub-link7 }}">{{ section.settings['sub-title7'] }}</a>
    {% endif %}
    {% if section.settings['sub-title8'] != blank %}
      <a href="{{ section.settings.sub-link8 }}">{{ section.settings['sub-title8'] }}</a>
    {% endif %}
  </div>
</div>
<style>
  .section-html-{{ section.id }}
  {
    display:flex;
    justify-content:center;
    flex-wrap:wrap;
    padding:50px 5%;
  }
  .leftt
  {
    width:50%;
    text-align:left;
  }
  .leftt h2
  {
    font-family: Switzer-Semibold !important;
    text-decoration: underline;
    font-size: 76px;
    font-weight: 700;
    line-height: 99px;
    font-style: normal;
    text-align: left;
    text-decoration-thickness: 5px;
    text-underline-offset: 18px;
    margin-bottom: 0;
  }
  .rightt
  {
    width:50%;
    text-align:left;
  }
  .rightt a
  {
    display:block;
    font-family: Futura !important;
    font-size: 20px;
    font-weight: 400;
    line-height: 76px;
    font-style: normal;
    text-align: left;
    letter-spacing: 30px;
    margin-bottom: 0;
  }

  @media (max-width: 1300px) {
    .leftt h2 {
      font-size: 45px;
      line-height: 70px;
      text-decoration-thickness: 4px;
      text-underline-offset: 15px;
    }

    .rightt a {
      font-size: 20px;
      line-height: 55px;
      letter-spacing: 20px;
    }
  }

  @media screen and (max-width:768px)
  {
    .leftt,.rightt
    {
      width:100%;
    }

    .leftt h2 {
      font-size: 30px;
      line-height: 45px;
      text-decoration-thickness: 2px;
      text-underline-offset: 5px;
    }

    .rightt a {
      font-size: 14px;
      line-height: 40px;
      letter-spacing: 10px;
      max-width: 200px;
    }
  }

  @media (max-width: 550px) {
    .rightt a {
      font-size: 14px;
      line-height: 25px;
      margin-bottom: 25px;
    }
  }
</style>
