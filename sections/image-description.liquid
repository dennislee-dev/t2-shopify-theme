{{ 'section-image-description.css' | asset_url | stylesheet_tag }}

<style>
  .section-html-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>

<div class="image-description">
  <h2 class="title">{{ section.settings.heading }}</h2>
  <div class="image-description-wrapper">
    <div class="image-model">
      <img src="{{ section.settings.image | img_url:'master' }}" class="main-image" alt="main-image">
    </div>
    <img src="{{ section.settings.path_image | img_url:'master' }}" class="path-image" alt="path-image">
    <p class="description">{{ section.settings.description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Image And Description",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "image_picker",
      "id": "path_image",
      "label": "Path Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Main Image"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 10,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Padding Top",
      "default": 50
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 10,
      "max": 600,
      "step": 10,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 50
    }
  ],
  "presets": [
    {
      "name": "Image And Description"
    }
  ]
}
{% endschema %}
