<!-- /sections/section-html.liquid -->
<div class="section-html-{{ section.id }}">
  <div class="w-grid1">
    <div class="grid-container">
    {% for block in section.blocks %}
      <div class="item-{{ forloop.index }}" >
        <a href="{{ block.settings.link }}">
           {% if block.settings.image != blank %}
             <img src="{{ block.settings.image | img_url:'master' }}">
           {% endif %}
        </a>
      </div>
    {% endfor %}
  </div> 
  </div>
</div>
<style>
  .section-html-{{section.id}}
  {
    display:flex;
    justify-content:center;
    align-items:center;
    flex-wrap:wrap;
    padding:50px 5% 100px 5%;
    background-color:#F1F1F1;
  }
  .grid-container
  {
    width: 100%;
    text-align: center;
    display: grid;
    grid-template-rows: repeat(4, 15vw);
    grid-template-columns: 1fr 1fr 1fr;
    grid-column-gap: 10px;
    grid-row-gap: 10px;
  }
  .grid-container img
  {
    width: 100%;
    height: 100%;
    object-fit: cover;
    max-width:100%;
  }
.item-1
  {
    grid-row-start: 1;
    grid-row-end: 3;
  }
  .item-2
  {
    
  }
  .item-3
  {
    
  }
  .item-4
  {
    grid-row-start: 2;
    grid-row-end: 3;
    grid-column-start: 2;
    grid-column-end: 3;
  }
  .item-5
  {
    grid-row-start: 2;
    grid-row-end: 4;
  }
  .item-6
  {
    
  }
  .item-7
  {
    
  }
  .item-8
  {
    
  }
  .item-9
  {
    
  }
  .item-10
  {
    
  }
  .w-grid1
  {
    width: 50%;
    justify-content: center;
    align-items: center;
    text-align: center;
  }
  @media screen and (max-width:768px)
  {
    .w-grid1
    {
      width:100%;
    }
    .grid-container
    {
      display:flex;
      flex-wrap:wrap;
      justify-content:space-between;
    }
    .item-1,.item-2,.item-3,.item-4,.item-5,.item-6,.item-7,.item-8,.item-9,.item-10
    {
      width:48%;
      
    }
  }
  
</style>
{% schema %}
{
  "name": "Profile Grid",
  "max_blocks":10,
  "settings": [
  ],
  "blocks": [
    {
      "type": "images",
      "name": "Image block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Profile Grid"
    }
  ]
}
{% endschema %}
