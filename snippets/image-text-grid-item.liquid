<div
  class="product-grid-item helper-content"
  data-grid-item
>
  <div>
    <div data-grid-slide>
      <img src="{{ image | img_url: '1000x' }}" class="product-image-custom" alt="image-text-grid-item-image">
    </div>
    <div class="product__grid__info-custom product__grid__info--under {{ settings.collection_text_alignment | default: 'text-center' }}">
      <p class="product__grid__title-custom">
        <span>{{ title }}</span>
      </p>
      <p class="product__grid__price-custom">{{ subtitle }}</p>
    </div>
  </div>
</div>